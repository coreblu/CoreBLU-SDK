<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    

    

    <Button
        android:id="@+id/sibeacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sallbeacon"
        android:text="Start Ibeacon Scan" />

    <Button
        android:id="@+id/sallbeacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Start All Beacon Scan" />

    <ListView
        android:id="@+id/beacon_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/sibeacon"
        android:layout_centerHorizontal="true" >

    </ListView>

</RelativeLayout>
